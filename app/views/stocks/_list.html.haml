%table.table.table-striped
  %thead
    %tr
      %th
        Name
      %th
        Symbol
      %th
        Current Price
      - if @user.id == current_user.id
        %th
          Actions
  %tboady
    - @user_stocks.each do |user_stock|
      %tr
        %td
          = user_stock.name
        %td
          = user_stock.ticker
        %td
          = user_stock.last_price
        %td
          - if @user.id == current_user.id
            = link_to "Delet this stock", user_stock_path(user_stock), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-danger btn-xs"
