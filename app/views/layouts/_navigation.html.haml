.navbar.navbar-default.navbar-static-top
  .container
    = link_to "finance tracker", root_path, class: "navbar_brand"
    - if current_user
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="#") FinanceTracker
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li= link_to "My portfolio", my_portfolio_path
          %li= link_to "my profile", edit_user_registration_path(current_user)
        %ul.nav.navbar-right.col-md-4
          %li.col-md-8
            %i.fa.fa-user
            -if current_user.full_name.present?
              = current_user.full_name
            -else
              = current_user.email
          %li.col-md-4.logout
            = link_to "Logout", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :Delete, data: {confirm: "are you sure?"}

